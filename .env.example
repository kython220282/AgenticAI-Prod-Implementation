# ==========================================
# AGENTIC AI - ENVIRONMENT CONFIGURATION
# ==========================================
# Copy this file to .env and fill in your actual values
# DO NOT commit .env to version control

# ==========================================
# APPLICATION SETTINGS
# ==========================================
APP_NAME=AgenticAI
APP_ENV=development  # development, staging, production
APP_DEBUG=true
APP_VERSION=1.0.0
APP_HOST=0.0.0.0
APP_PORT=8000

# ==========================================
# API CONFIGURATION
# ==========================================
API_PREFIX=/api/v1
API_CORS_ORIGINS=http://localhost:3000,http://localhost:8000
API_RATE_LIMIT_PER_MINUTE=60
API_MAX_CONNECTIONS=100

# ==========================================
# SECURITY
# ==========================================
# Generate with: openssl rand -hex 32
SECRET_KEY=your-secret-key-here-change-in-production
JWT_SECRET_KEY=your-jwt-secret-key-here-change-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# API Key for internal services
INTERNAL_API_KEY=your-internal-api-key-here

# ==========================================
# LLM PROVIDERS
# ==========================================
# OpenAI
OPENAI_API_KEY=sk-your-openai-key-here
OPENAI_ORG_ID=your-org-id-optional
OPENAI_DEFAULT_MODEL=gpt-4-turbo-preview
OPENAI_MAX_RETRIES=3
OPENAI_TIMEOUT=60

# Anthropic (Claude)
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key-here
ANTHROPIC_DEFAULT_MODEL=claude-3-opus-20240229

# Azure OpenAI (Optional)
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_API_KEY=your-azure-key-here
AZURE_OPENAI_API_VERSION=2024-02-01

# ==========================================
# VECTOR DATABASES
# ==========================================
# ChromaDB (Local)
CHROMA_PERSIST_DIRECTORY=./data/vector_db/chroma
CHROMA_COLLECTION_NAME=agent_memory

# Pinecone (Cloud)
PINECONE_API_KEY=your-pinecone-key-here
PINECONE_ENVIRONMENT=gcp-starter
PINECONE_INDEX_NAME=agent-memory

# Weaviate
WEAVIATE_URL=http://localhost:8080
WEAVIATE_API_KEY=your-weaviate-key-optional

# Vector DB Selection (chroma, pinecone, weaviate, faiss)
VECTOR_DB_PROVIDER=chroma

# ==========================================
# DATABASE
# ==========================================
# PostgreSQL
DATABASE_URL=postgresql://agenticai:password@localhost:5432/agenticai_db
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=10
DATABASE_ECHO=false

# Redis (Caching & Queue)
REDIS_URL=redis://localhost:6379/0
REDIS_MAX_CONNECTIONS=50
CACHE_TTL_SECONDS=3600

# ==========================================
# MONITORING & LOGGING
# ==========================================
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FORMAT=json  # json, text
LOG_FILE_PATH=./data/logs/app.log
LOG_MAX_BYTES=10485760  # 10MB
LOG_BACKUP_COUNT=10

# Sentry (Error Tracking)
SENTRY_DSN=your-sentry-dsn-optional
SENTRY_ENVIRONMENT=development
SENTRY_TRACES_SAMPLE_RATE=0.1

# ==========================================
# METRICS & OBSERVABILITY
# ==========================================
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090
METRICS_EXPORT_INTERVAL=60

# OpenTelemetry
OTEL_ENABLED=false
OTEL_EXPORTER_ENDPOINT=http://localhost:4317
OTEL_SERVICE_NAME=agenticai

# ==========================================
# MESSAGE QUEUE
# ==========================================
# RabbitMQ
RABBITMQ_URL=amqp://guest:guest@localhost:5672/
RABBITMQ_EXCHANGE=agenticai_exchange
RABBITMQ_QUEUE=agenticai_tasks

# Celery (Task Queue)
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2
CELERY_TASK_SERIALIZER=json
CELERY_RESULT_SERIALIZER=json

# ==========================================
# FILE STORAGE
# ==========================================
# Local Storage
UPLOAD_DIR=./data/uploads
MAX_UPLOAD_SIZE_MB=10

# S3 / MinIO (Optional)
S3_ENABLED=false
S3_ENDPOINT=https://s3.amazonaws.com
S3_ACCESS_KEY=your-access-key
S3_SECRET_KEY=your-secret-key
S3_BUCKET_NAME=agenticai-storage
S3_REGION=us-east-1

# ==========================================
# AGENT CONFIGURATION
# ==========================================
MAX_AGENTS_PER_USER=10
MAX_CONCURRENT_REQUESTS=5
AGENT_TIMEOUT_SECONDS=300
AGENT_MAX_MEMORY_SIZE=100000

# Token Limits
MAX_TOKENS_PER_REQUEST=4000
DAILY_TOKEN_LIMIT=1000000
TOKEN_ALERT_THRESHOLD=800000

# ==========================================
# RATE LIMITING
# ==========================================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_STRATEGY=sliding_window  # fixed_window, sliding_window
RATE_LIMIT_REDIS_URL=redis://localhost:6379/3

# Per User Limits
USER_REQUESTS_PER_MINUTE=60
USER_REQUESTS_PER_HOUR=1000
USER_REQUESTS_PER_DAY=10000

# Per IP Limits
IP_REQUESTS_PER_MINUTE=100

# ==========================================
# EMAIL (Optional)
# ==========================================
SMTP_ENABLED=false
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM_EMAIL=noreply@agenticai.com
SMTP_FROM_NAME=AgenticAI

# ==========================================
# WEBHOOKS
# ==========================================
WEBHOOK_ENABLED=false
WEBHOOK_SECRET=your-webhook-secret
WEBHOOK_TIMEOUT=30

# ==========================================
# FEATURE FLAGS
# ==========================================
FEATURE_LLM_AGENTS=true
FEATURE_VECTOR_MEMORY=true
FEATURE_MULTI_AGENT=true
FEATURE_COLLABORATIVE_AGENTS=true
FEATURE_ANALYTICS=true
FEATURE_EXPORT=true

# ==========================================
# DEVELOPMENT / DEBUG
# ==========================================
# Auto-reload on code changes (dev only)
RELOAD=true

# SQL Query Logging
SQL_ECHO=false

# Mock LLM responses (for testing without API keys)
MOCK_LLM=false

# ==========================================
# DOCKER CONFIGURATION
# ==========================================
DOCKER_NETWORK=agenticai-network
POSTGRES_IMAGE=postgres:15-alpine
REDIS_IMAGE=redis:7-alpine
NGINX_IMAGE=nginx:alpine
